{
  "name": "hls-starter",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "pnpm --filter @hls-starter/web dev",
    "build": "pnpm --filter @hls-starter/web build",
    "start": "pnpm --filter @hls-starter/web start",
    "lint": "pnpm --filter @hls-starter/web lint",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\" --cache",
    "typecheck": "pnpm --filter @hls-starter/web type-check",
    "desktop:dev": "pnpm --filter @hls-starter/desktop electron:dev",
    "desktop:build": "pnpm --filter @hls-starter/desktop electron:build",
    "desktop:make": "pnpm --filter @hls-starter/desktop electron:make",
    "desktop:start": "pnpm --filter @hls-starter/desktop start",
    "turbo:build": "turbo run build",
    "turbo:lint": "turbo run lint",
    "turbo:type-check": "turbo run type-check",
    "turbo:format": "turbo run format",
    "turbo:format:check": "turbo run format:check",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.3.8",
    "husky": "^9.1.7",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "turbo": "^2.5.6",
    "typescript": "^5.8.3"
  }
}
