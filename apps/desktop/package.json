{
  "name": "@hls-starter/desktop",
  "productName": "HLS Starter",
  "version": "1.0.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "compile": "tsc -p tsconfig.json",
    "dev": "NODE_ENV=development tsc -p tsconfig.json && wait-on http://localhost:3000 && NODE_ENV=development electron . --name=HLSStarter",
    "start": "electron .",
    "watch": "tsc -p tsconfig.json --watch",
    "electron:dev": "concurrently -k \"pnpm --filter @hls-starter/web dev\" \"pnpm run compile && pnpm run dev\"",
    "electron:build": "tsc -p tsconfig.json && electron-forge package",
    "electron:make": "tsc -p tsconfig.json && electron-forge make",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-dmg": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@electron-forge/plugin-fuses": "^7.2.0",
    "@electron/fuses": "^1.8.0",
    "@types/node": "^22.15.17",
    "@types/uuid": "^9.0.8",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "typescript": "^5.8.3",
    "wait-on": "^7.2.0"
  }
}